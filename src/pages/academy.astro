---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";

const INTEREST_LINK =
  "mailto:gauthamail@gmail.com?subject=Turpentine%20Academy%20%E2%80%94%20I%27m%20interested&body=Hey%20Gautham%2C%0A%0AI%27m%20interested%20in%20Turpentine%20Academy.%20Here%27s%20what%20I%27m%20building%20and%20what%20I%27d%20love%20to%20learn%3A%0A%0A-%20What%20I%27m%20building%3A%20%0A-%20What%20I%27m%20stuck%20on%3A%20%0A-%20Topics%20I%27m%20most%20interested%20in%3A%20%0A%0AThanks!";

// Turpentine Academy (GrowthToDo) — what you run directly
const turpentineReady = [
  {
    title: "Reverse Engineer Product–Market Fit",
    img: "/post_img.webp",
    desc:
      "A practical workshop for founders to identify the real bottleneck, define the buyer + promise, and leave with a tight execution plan.",
    url: "/consulting", // change to the actual landing page when you create it
    badge: "READY",
  },
];

const turpentineComingSoon = [
  {
    title: "Performance Marketing for the Indian Market",
    img: "/post_img.webp",
    desc:
      "A founder-friendly course on running ads with clarity: offers, landing pages, measurement, creatives, and iteration — tailored to India.",
    url: "#",
    badge: "COMING SOON",
  },
];

// The Second Design — already available there (linked out)
const secondDesignAvailable = [
  {
    title: "Design Your Own Code-Based Course",
    img: "/post_img.webp",
    desc:
      "A practical program under The Second Design: design the curriculum, learning cadence, projects, and outcomes for a course people actually finish.",
    url: "https://theseconddesign.com",
    badge: "AVAILABLE",
  },
  {
    title: "Online Course Creation Kickstarter",
    img: "/post_img.webp",
    desc:
      "A fast-start workshop under The Second Design to go from idea → outline → first module → launch plan, without perfectionism.",
    url: "https://theseconddesign.com",
    badge: "AVAILABLE",
  },
];
---

<BaseLayout title="Academy" sideBarActiveItemID="academy">
  <!-- INTRO -->
  <section class="mt-2">
    <div class="text-3xl w-full font-bold">Turpentine Academy</div>

    <div class="mt-4 space-y-4">
      <div class="rounded-2xl border border-slate-200 dark:border-slate-800 p-6 bg-base-100">
        <div class="text-lg leading-relaxed">
          <span class="font-semibold">“When art critics get together they talk about Form and Structure and Meaning.</span>
          <span class="font-semibold"> When artists get together they talk about where you can buy cheap turpentine.”</span>
          <span class="opacity-80"> — Pablo Picasso</span>
        </div>

        <div class="mt-4 space-y-3 text-lg">
          <p>
            Turpentine Academy is built on that idea: less theory-theatre, more real craft.
          </p>
          <p>
            Critics talk about frameworks. Builders talk about tools, constraints, distribution, shipping, and the unglamorous
            steps that make the work exist in the real world.
          </p>
          <p>
            This is where I package those practical lessons into workshops and courses you can actually use.
          </p>
        </div>
      </div>

      <div class="mt-6 flex flex-wrap gap-4">
        <a class="btn" href={INTEREST_LINK}>Get notified</a>
        <a class="btn btn-outline" href="/blog">Read the blog</a>
      </div>

      <div class="mt-4 text-sm text-slate-500">
        If you want a private run for your team/community, email context and I’ll tell you what fits.
      </div>
    </div>
  </section>

  <!-- TURPENTINE ACADEMY -->
  <section class="mt-12">
    <div class="text-2xl font-bold mb-2">Turpentine Academy</div>
    <div class="text-sm opacity-75">
      Workshops and courses I run directly under Turpentine Academy.
    </div>

    <div class="mt-6">
      <div class="text-xl font-bold mb-4">Ready</div>
      {turpentineReady.map((c, idx) => (
        <>
          <HorizontalCard
            title={c.title}
            img={c.img}
            desc={c.desc}
            url={c.url}
            badge={c.badge}
            target={c.url.startsWith("http") ? "_blank" : "_self"}
          />
          {idx !== turpentineReady.length - 1 && <div class="divider my-0"></div>}
        </>
      ))}
    </div>

    <div class="mt-10">
      <div class="text-xl font-bold mb-4">Coming soon</div>
      {turpentineComingSoon.map((c, idx) => (
        <>
          <HorizontalCard
            title={c.title}
            img={c.img}
            desc={c.desc}
            url={c.url}
            badge={c.badge}
            target={c.url.startsWith("http") ? "_blank" : "_self"}
          />
          {idx !== turpentineComingSoon.length - 1 && <div class="divider my-0"></div>}
        </>
      ))}
    </div>
  </section>

  <!-- THE SECOND DESIGN -->
  <section class="mt-12">
    <div class="text-2xl font-bold mb-2">From The Second Design</div>
    <div class="text-sm opacity-75">
      Programs already available under The Second Design (linked out).
    </div>

    <div class="mt-6">
      {secondDesignAvailable.map((c, idx) => (
        <>
          <HorizontalCard
            title={c.title}
            img={c.img}
            desc={c.desc}
            url={c.url}
            badge={c.badge}
            target="_blank"
          />
          {idx !== secondDesignAvailable.length - 1 && <div class="divider my-0"></div>}
        </>
      ))}
    </div>
  </section>

  <!-- CTA -->
  <section class="mt-12">
    <div class="rounded-2xl border border-slate-200 dark:border-slate-800 p-6">
      <div class="text-xl font-bold">Want Turpentine Academy for your team or community?</div>
      <p class="mt-2 text-lg">
        If you run a founder group, student community, or internal team, I can run a Turpentine Academy workshop privately.
      </p>
      <div class="mt-5">
        <a class="btn" href={INTEREST_LINK}>Email me</a>
      </div>
    </div>
  </section>
</BaseLayout>