---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";

// Active: only what’s live + being operated right now
const activeProjects = [
  {
    title: "SellOnTube",
    img: "/post_img.webp",
    desc: "YouTube-first customer acquisition for internet businesses in a Done-For-You model.",
    url: "https://sellontube.com",
    badge: "ACTIVE",
  },
  {
    title: "The Second Design",
    img: "/post_img.webp",
    desc:
      "An education design studio building transformational learning environments — cohort-based programs, curriculum design, and facilitator training.",
    url: "https://theseconddesign.com",
    badge: "ACTIVE",
  },
];

// Upcoming: in progress / building
const upcomingProjects = [
  {
    title: "Turpentine Academy",
    img: "/post_img.webp",
    desc:
      "Workshops and playbooks for founders on clarity, execution, marketing, and leverage — built from real projects, not theory.",
    url: "/academy",
    badge: "UPCOMING",
  },
  {
    title: "Healthcare Staff Scheduling Project",
    img: "/post_img.webp",
    desc:
      "A product-in-progress for US healthcare scheduling, focused on reducing operational chaos, overtime, and burnout.",
    url: "#",
    badge: "R&D",
  },
];

// Past: completed / previous chapters
const pastProjects = [
  {
    title: "HowToCBC",
    img: "/post_img.webp",
    desc: "Cohort-based learning initiative focused on structured learning and outcomes-driven programs.",
    url: "#",
    badge: "PAST",
  },
  {
    title: "Pupilfirst",
    img: "/post_img.webp",
    desc: "Built and ran an education product/company focused on cohort-based learning and learning operations.",
    url: "#",
    badge: "PAST",
  },
  {
    title: "Startup Village Collective (SV.CO)",
    img: "/post_img.webp",
    desc:
      "Early-stage founder education and incubation — helping students and professionals build real products and skills.",
    url: "#",
    badge: "PAST",
  },
  {
    title: "SV Labs",
    img: "/post_img.webp",
    desc: "An experimental builder arm — shipping projects, prototypes, and tools in the early ecosystem days.",
    url: "#",
    badge: "PAST",
  },
];
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <!-- INTRO -->
  <section class="mt-2">
    <div class="text-3xl w-full font-bold">Projects</div>

    <div class="mt-4 space-y-4">
      <p class="text-lg">
        I build internet-first businesses — some as experiments, some as serious long-term bets.
      </p>
      <p class="text-lg">
        This page is a snapshot of what I’m actively running, what’s coming next, and what I’ve built in the past.
      </p>
    </div>
  </section>

  <!-- ACTIVE PROJECTS -->
  <section class="mt-12">
    <div class="text-2xl font-bold mb-5">Active</div>

    {activeProjects.map((p, idx) => (
      <>
        <HorizontalCard
          title={p.title}
          img={p.img}
          desc={p.desc}
          url={p.url}
          badge={p.badge}
          target={p.url.startsWith("http") ? "_blank" : "_self"}
        />
        {idx !== activeProjects.length - 1 && <div class="divider my-0"></div>}
      </>
    ))}
  </section>

  <!-- UPCOMING PROJECTS -->
  <section class="mt-12">
    <div class="text-2xl font-bold mb-5">Upcoming</div>

    {upcomingProjects.map((p, idx) => (
      <>
        <HorizontalCard
          title={p.title}
          img={p.img}
          desc={p.desc}
          url={p.url}
          badge={p.badge}
          target={p.url.startsWith("http") ? "_blank" : "_self"}
        />
        {idx !== upcomingProjects.length - 1 && <div class="divider my-0"></div>}
      </>
    ))}
  </section>

  <!-- PAST PROJECTS -->
  <section class="mt-12">
    <div class="text-2xl font-bold mb-5">Past projects</div>

    {pastProjects.map((p, idx) => (
      <>
        <HorizontalCard
          title={p.title}
          img={p.img}
          desc={p.desc}
          url={p.url}
          badge={p.badge}
          target={p.url.startsWith("http") ? "_blank" : "_self"}
        />
        {idx !== pastProjects.length - 1 && <div class="divider my-0"></div>}
      </>
    ))}
  </section>
</BaseLayout>